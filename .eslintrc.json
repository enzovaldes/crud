{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-typescript/base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "import",
        "unused-imports"
    ],
    "rules": {
        "@typescript-eslint/no-use-before-define": "off",
        "import/no-extraneous-dependencies": "off",
        "quotes": "error"
    },
    "ignorePatterns": [
        "jest.config.js"
    ]
}